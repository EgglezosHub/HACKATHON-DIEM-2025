# ============================================================================
# BACKEND ENVIRONMENT CONFIGURATION (copy this to `.env`)
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# SQLite file for hackathon demo (one-file persistence)
DATABASE_URL=sqlite:///./energy.db


# ----------------------------------------------------------------------------
# PLATFORM ECONOMICS
# ----------------------------------------------------------------------------
# Platform keeps 2% fee from each transaction
PLATFORM_FEE_RATE=0.02


# ----------------------------------------------------------------------------
# SIMULATION
# ----------------------------------------------------------------------------
# Toggle automatic meter readings (no auto-offers)
SIMULATION_ENABLED=True

# How often the simulator inserts readings (seconds)
SIMULATION_INTERVAL_SECONDS=10


# ----------------------------------------------------------------------------
# PROVIDER VIRTUAL PRICING
# ----------------------------------------------------------------------------
# Names of energy providers that appear as "virtual" offers in the marketplace
PROVIDER_NAMES=ΔΕΗ,ΗΡΩΝ

# Base price per kWh for providers (in EUR)
PROVIDER_BASE_PRICE_EUR_PER_KWH=0.25

# Hourly schedule for price multiplier (24h clock)
# Format: (start_hour, end_hour, multiplier)
# Example: 0–7 cheaper, 7–17 normal, 17–22 higher, 22–24 normal
PROVIDER_PRICE_SCHEDULE="[(0, 7, 0.9), (7, 17, 1.0), (17, 22, 1.2), (22, 24, 1.0)]"

# Rare surge hour (randomly selected at process start)
PROVIDER_SURGE_ENABLED=True
PROVIDER_SURGE_ALLOWED_HOURS="(17,21)"
PROVIDER_SURGE_MULTIPLIER=1.35

# Whether providers appear as virtual items in the marketplace
PROVIDER_VIRTUAL_PRICING=True


# ----------------------------------------------------------------------------
# BLOCKCHAIN
# ----------------------------------------------------------------------------
# If True, every trade must include a tx_hash (MetaMask integration)
REQUIRE_TX_HASH_ON_ACCEPT=False
